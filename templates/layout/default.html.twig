{% extends 'layout/scaffold.html.twig' %}

{% block body %}
    <header class="page-header">{% include 'components/header.html.twig' %}</header>
    <main class="page-main container">
        <div class="page-header">
            <h1>{% block pageTitle %}Croggle{% endblock %}</h1>
        </div>
        {% include 'components/breadcrumbs.html.twig' %}
        {% block content %}{% endblock %}

        {% block pagination %}
            {% if config.plugins.pagination.enabled and page.header.content.pagination %}
                {% include 'partials/pagination.html.twig' with {'base_url':page.url, 'pagination':collection.params.pagination} %}
            {% endif %}
        {% endblock %}
    </main>
    <footer class="page-footer">{% include 'components/footer.html.twig' %}</footer>
{% endblock %}
