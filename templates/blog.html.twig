{% extends 'layout/default.html.twig' %}

{% block pageTitle %}{{ page.title }}{% endblock %}

{% block content %}
  <div id="blog">
    <h2>{{page.title}}</h2>
    {{page.content}}

    {% set collection = page.collection() %}
    {% for blogentry in collection%}
        {% if not loop.first %}
          <div class="blog-entry-divider">
            <img src="{{ url('theme://img/logo-small.png') }}" alt="Croggle" />
            <img src="{{ url('theme://img/logo-small.png') }}" alt="Croggle" />
            <img src="{{ url('theme://img/logo-small.png') }}" alt="Croggle" />
            <img src="{{ url('theme://img/logo-small.png') }}" alt="Croggle" />
            <img src="{{ url('theme://img/logo-small.png') }}" alt="Croggle" />
          </div>
        {% endif %}
        {% include "components/blog/blog-list-item.html.twig" %}
    {% endfor %}
  </div>
{% endblock %}
