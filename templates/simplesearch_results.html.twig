{% extends 'layout/default.html.twig' %}

{% block pageTitle %}Search{% endblock %}

{% block content %}
    <div id="search">
        <section class="filter">
            <section class="tiny">
                <h2>Enter search query</h2>
                {% include 'partials/simplesearch_searchbox.html.twig' %}
            </section>
            <section class="tiny">
                <p>
                {% if query %}
                    {% set count = search_results ? search_results.count : 0 %}
                    {% if count == 1 %}
                        {{ "PLUGIN_SIMPLESEARCH.SEARCH_RESULTS_SUMMARY_SINGULAR"|t(query|e)|raw }}
                    {% else %}
                        {{ "PLUGIN_SIMPLESEARCH.SEARCH_RESULTS_SUMMARY_PLURAL"|t(query|e, count)|raw }}
                    {% endif %}
                {% endif %}
                </p>
            </section>
        </section>
        <section>
            {% for page in search_results %}
                {% include 'partials/simplesearch_item.html.twig' with {'page':page} %}
            {% endfor %}
        </section>
    </div>
{% endblock %}
