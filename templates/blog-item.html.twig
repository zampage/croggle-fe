{% extends 'layout/default.html.twig' %}

{% block pageTitle %}{{ page.title }}{% endblock %}

{% block content %}
{% include 'components/blog/blog-list-item.html.twig' with {'blogentry': page} %}
{% endblock %}

{% block pagination %}
    {% set cp = page.parent().children() %}
    {% set nextSibling = cp.nextSibling(page.path) %}
    {% set prevSibling = cp.prevSibling(page.path) %}

    {%if nextSibling.title %}<a href="{{nextSibling.url}}">Next</a>{%endif%}
    {%if prevSibling.title %}<a href="{{prevSibling.url}}">Prev</a>{%endif%}
        
{% endblock %}