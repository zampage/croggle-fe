{# TODO: implement card marks #}
<article class="card card-small">
    <header>
        <a href="{{ page.url }}" class="card-image remove-link-style" style="background-image:url('{{page.media[page.header.image].url}}')"></a>
        <div class="marks">
            {% set color = {white: '#ffffff', black: '#000000'} %}
            {% for mark in page.header.marks %}
                {% include 'components/util/mark.html.twig' with {mark: mark, classes: 'mark-bold mark-upper'} %}
            {% endfor %}
        </div>
    </header>
    <main class="card-body">
        <a href="{{ page.url }}" class="remove-link-style">
            <h3>{{page.title}}</h3>
            <p>{{page.header.lead}}</p>
        </a>
    </main>
    <footer class="card-footer">
        <span class="card-date">{{page.header.publish_date | date('d.m.Y')}}</span>
        <span>&nbsp;-&nbsp;</span>
        <span class="card-author">
            {# TODO: replace with page data, find way to select user in backend #}
            <span class="author-full">Natalie Schumacher</span>
  			    <span class="author-initials">NS</span>
    		</span>
        <span class="card-social">
            {% if page.header.pdf %}
                <a href="{{page.media[page.header.pdf].url}}" title="download the pattern" target="_blank"><i class="far fa-file-pdf"></i></a>
            {% endif %}

    			{% for social in page.header.social %}
              <a href="{{social.url}}" target="_blank"><i class="fab fa-{{social.network}}"></i></a>
          {% endfor %}
	      </span>
    </footer>
</article>
