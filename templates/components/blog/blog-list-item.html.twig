<article class="blog-entry">
	<main>
		<h3 class="blog-entry-title">{{blogentry.title}}</h3>
		<div class="blog-entry-content">
			{{blogentry.content}}
		</div>
	</main>
	<footer>
		<span>{{blogentry.header.date | date("d.m.Y H:i")}}</span>
		<span>&nbsp;-&nbsp;</span>
		<span>{{blogentry.header.author}}</span>
	</footer>
</article>
